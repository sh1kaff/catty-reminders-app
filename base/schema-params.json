{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "proxy",
    "sa_login",
    "sa_mail",
    "timeout",
    "poll_interval",
    "users"
  ],
  "properties": {
    "proxy": {
      "type": "string",
      "minLength": 1
    },
    "sa_login": {
      "type": "string",
      "minLength": 1
    },
    "sa_mail": {
      "type": "string",
      "format": "email"
    },
    "timeout": {
      "type": "integer",
      "minimum": 1
    },
    "poll_interval": {
      "type": "integer",
      "minimum": 1
    },
    "users": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["login", "id", "app"],
        "properties": {
          "login": {
            "type": "string",
            "minLength": 1
          },
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$"
          },
          "app": {
            "type": "string",
            "enum": ["catty-reminders-app", "static-website-example", "Csharp-example"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
